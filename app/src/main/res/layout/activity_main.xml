<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <!-- поле вывода результата -->
    <TextView
        android:id="@+id/calculation_result_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/operation_field"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- поле знака операции -->
    <TextView
        android:id="@+id/operation_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/calculation_result_text_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- поле ввода чисел -->
    <EditText
        android:id="@+id/number_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculation_result_text_view" />

    <LinearLayout
        android:id="@+id/change_data_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_field">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear_last_symbol_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:text="CE"
            app:backgroundTint="@color/purple_500"
            app:cornerRadius="@dimen/corner_Radius" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:text="C"
            app:backgroundTint="@color/purple_500"
            app:cornerRadius="@dimen/corner_Radius" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/plus_minus_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:text="+/-"
            app:backgroundTint="@color/purple_500"
            app:cornerRadius="@dimen/corner_Radius" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/first_buttons_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_data_field">

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onNumberClick"
            android:text="1"
            app:backgroundTint="@color/teal_200"
            app:cornerRadius="@dimen/corner_Radius" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onNumberClick"
            android:text="2"
            app:backgroundTint="@color/teal_200"
            app:cornerRadius="@dimen/corner_Radius" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onNumberClick"
            android:text="3"
            app:backgroundTint="@color/teal_200"
            app:cornerRadius="@dimen/corner_Radius" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onOperationClick"
            android:text="/"
            app:backgroundTint="@color/red"
            app:cornerRadius="@dimen/corner_Radius" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_buttons_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_buttons_panel">

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onNumberClick"
            android:text="4"
            app:backgroundTint="@color/teal_200"
            app:cornerRadius="@dimen/corner_Radius" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onNumberClick"
            android:text="5"
            app:backgroundTint="@color/teal_200"
            app:cornerRadius="@dimen/corner_Radius" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onNumberClick"
            android:text="6"
            app:backgroundTint="@color/teal_200"
            app:cornerRadius="@dimen/corner_Radius" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onOperationClick"
            android:text="*"
            app:backgroundTint="@color/red"
            app:cornerRadius="@dimen/corner_Radius" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_buttons_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_buttons_panel">

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onNumberClick"
            android:text="7"
            app:backgroundTint="@color/teal_200"
            app:cornerRadius="@dimen/corner_Radius" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onNumberClick"
            android:text="8"
            app:backgroundTint="@color/teal_200"
            app:cornerRadius="@dimen/corner_Radius" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onNumberClick"
            android:text="9"
            app:backgroundTint="@color/teal_200"
            app:cornerRadius="@dimen/corner_Radius" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onOperationClick"
            android:text="-"
            app:backgroundTint="@color/red"
            app:cornerRadius="@dimen/corner_Radius" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forth_buttons_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/third_buttons_panel">

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onNumberClick"
            android:text="0"
            app:backgroundTint="@color/teal_200"
            app:cornerRadius="@dimen/corner_Radius" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dot_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onNumberClick"
            android:text=","
            app:backgroundTint="@color/teal_200"
            app:cornerRadius="@dimen/corner_Radius" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onOperationClick"
            android:text="="
            app:backgroundTint="@color/red"
            app:cornerRadius="@dimen/corner_Radius" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:onClick="onOperationClick"
            android:text="+"
            app:backgroundTint="@color/red"
            app:cornerRadius="@dimen/corner_Radius" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifth_buttons_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forth_buttons_panel">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActTwo"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="@dimen/button_weight"
            android:text="Go to second activity"
            app:backgroundTint="@color/teal_700"
            app:cornerRadius="@dimen/corner_Radius" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>